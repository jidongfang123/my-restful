<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kdxc.myrestful.mapper.UserMapper">
    <resultMap id="BaseResultMap" type="com.kdxc.myrestful.pojo.User">
        <id column="uid" jdbcType="INTEGER" property="uid"/>
        <result column="uname" jdbcType="VARCHAR" property="uname"/>
        <result column="age" jdbcType="INTEGER" property="age"/>
        <result column="usex" jdbcType="INTEGER" property="usex"/>
        <result column="upwd" jdbcType="VARCHAR" property="upwd"/>
        <result column="uphone" jdbcType="VARCHAR" property="uphone"/>
    </resultMap>


    <!-- 定义resultMap，type为HashMap -->
    <resultMap id="LoginResultMap" type="java.util.HashMap">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="uname" jdbcType="VARCHAR" property="uname"/>
        <result column="upwd" jdbcType="VARCHAR" property="upwd"/>
    </resultMap>

        <select id="queryUserList" resultMap="BaseResultMap">
            SELECT * FROM user
        </select>

        <insert id="insertUser"  useGeneratedKeys="true" keyProperty="uid" parameterType="com.kdxc.myrestful.pojo.User">
            INSERT INTO user (uname,age,usex,upwd,uphone) VALUES (#{uname},#{age},#{usex},#{upwd},#{uphone})
        </insert>

        <select id="queryUserByid" resultMap="LoginResultMap">
            SELECT  uid,uname,upwd FROM user where uphone = #{uphone}
        </select>



</mapper>